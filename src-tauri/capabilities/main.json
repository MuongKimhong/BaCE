{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "core:window:allow-set-title",
    "dialog:allow-open",
    "dialog:default",
    "dialog:allow-save",
    "fs:allow-write",
    "fs:allow-read",
    "fs:allow-open",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-app-read",
    "fs:allow-app-write",
    "fs:allow-app-write-recursive"
  ]
}
